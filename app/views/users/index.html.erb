<div class="container px-5 px-sm-0">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/userinfo', user: @user, book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
                <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "40x40", fallback: "no_image.jpg" %>
              </th>
              <th>
                <%= book.user.name %>
              </th>
              <th>
                <%= link_to "Show", user_path(book.user.id) %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>