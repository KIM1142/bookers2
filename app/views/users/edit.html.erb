<div class= "container">
  <p id="notice"><%= notice %></p>
    
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <label for="user_name">Name</label>
        </div>
        <div class="form-group">
          <%= f.text_field :name, id:"user_name", class:"form-control name", placeholder: "current_user" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
        </div>
        <div class="form-group">
          <%= f.attachment_field :profile_image %>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
        </div>
        <div class="form-group">
          <%= f.text_area :introduction, id:"user_introduction", class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
